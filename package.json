{
    "name": "vscode-auto-timestamp",
    "displayName": "Auto Time Stamp",
    "description": "Update timestamp in file content on save",
    "version": "0.0.5",
    "publisher": "hseliger",
    "license": "Zlib",
    "engines": {
        "vscode": "^1.18.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hseliger/vscode-auto-timestamp.git"
    },
    "bugs": {
        "url": "https://github.com/hseliger/vscode-auto-timestamp/issues",
        "email": "github@hseliger.eu"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "Auto Time Stamp",
                "type": "object",
                "properties": {
                    "hseliger.autoTimeStamp.filenamePattern": {
                        "description": "%filenamePattern.description%",
                        "type": "string",
                        "default": ".*"
                    },
                    "hseliger.autoTimeStamp.lineLimit": {
                        "description": "%lineLimit.description%",
                        "type": "integer",
                        "default": 5
                    },
                    "hseliger.autoTimeStamp.birthTimeStart": {
                        "description": "%birthTimeStart.description%",
                        "type": "string",
                        "default": "[cC]reated *: "
                    },
                    "hseliger.autoTimeStamp.birthTimeEnd": {
                        "description": "%birthTimeEnd.description%",
                        "type": "string",
                        "default": "$"
                    },
                    "hseliger.autoTimeStamp.modifiedTimeStart": {
                        "description": "%modifiedTimeStart.description%",
                        "type": "string",
                        "default": "[lL]ast[ -][mM]odified *: "
                    },
                    "hseliger.autoTimeStamp.modifiedTimeEnd": {
                        "description": "%modifiedTimeEnd.description%",
                        "type": "string",
                        "default": "$"
                    },
                    "hseliger.autoTimeStamp.luxonFormat": {
                        "description": "%luxonFormat.description%",
                        "type": "string",
                        "default": "YYYY/MM/DD HH:mm:ss"
                    },
                    "hseliger.y.suffix": {
                        "description": "%suffix.description%",
                        "type": "string",
                        "default": ""
                    },
                    "hseliger.autoTimeStamp.texPlaceholder": {
                        "description": "%texPlaceholder.description%",
                        "type": "string",
                        "default": "XXX-DATE-WHEN-CREATED-XXX"
                    },
                    "hseliger.autoTimeStamp.texFormat": {
                        "description": "%texFormat.description%",
                        "type": "string",
                        "default": "'\\DTMdate{'yyyy-MM-dd'}'"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js",
        "vsce-package": "vsce package"
    },
    "devDependencies": {
        "@types/luxon": "^2.3.1",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.1",
        "@types/vscode": "^1.18.0",
        "typescript": "^4.2.4",
        "vsce": "^1.88.0",
        "vscode-test": "^1.5.2",
        "vso-node-api": "6.5.0"
    },
    "dependencies": {
        "luxon": "^2.3.1"
    }
}
